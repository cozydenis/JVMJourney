<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StatisticController">
    <children>
        <HBox fx:id="chartContainer" fillHeight="true" spacing="20" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <!-- Memory Usage Chart -->
            <LineChart fx:id="memoryUsageChart" title="Memory usage during time" HBox.hgrow="ALWAYS">
                <xAxis>
                    <NumberAxis autoRanging="false" forceZeroInRange="false" label="Seconds" side="BOTTOM" upperBound="59.0" />
                </xAxis>
                <yAxis>
                    <NumberAxis autoRanging="false" label="Memory usage (%)" side="LEFT" upperBound="100" />
                </yAxis>
            </LineChart>

            <!-- Thread Count Chart -->
            <LineChart fx:id="threadCountChart" title="Thread count over time" HBox.hgrow="ALWAYS">
                <xAxis>
                    <NumberAxis autoRanging="true" forceZeroInRange="false" label="Seconds" side="BOTTOM" upperBound="59.0" />
                </xAxis>
                <yAxis>
                    <NumberAxis autoRanging="true" label="Thread Count" side="LEFT" upperBound="5.0" />
                </yAxis>
            </LineChart>
        </HBox>
    </children>
</AnchorPane>
