<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.HBox?>

<LineChart title="Memory usage over time" fx:id="memoryUsageChart" fx:controller="statisticsController.MemoryController"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" HBox.hgrow="ALWAYS">
    <xAxis>
        <NumberAxis autoRanging="false" forceZeroInRange="false" label="Seconds" side="BOTTOM" upperBound="60.0"/>
    </xAxis>
    <yAxis>
        <NumberAxis label="Memory usage (MB)" side="LEFT"/>
    </yAxis>
</LineChart>
